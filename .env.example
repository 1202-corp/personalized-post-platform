# ===========================================
# PostgreSQL
# ===========================================
POSTGRES_USER=ppb_user
POSTGRES_PASSWORD=ppb_secret
POSTGRES_DB=ppb_db

# ===========================================
# Main Bot (Aiogram)
# ===========================================
TELEGRAM_BOT_TOKEN=your_bot_token_here

# User Bot (Telethon) - Get from https://my.telegram.org
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_SESSION_STRING=your_session_string

# MiniApp URL (public URL for Telegram WebApp)
MINIAPP_URL=https://your-domain.com

# Retention settings (seconds)
RETENTION_CHECK_INTERVAL=300
RETENTION_SILENCE_THRESHOLD=600

# Default training channels (comma-separated)
DEFAULT_TRAINING_CHANNELS=@durov,@telegram

# Language (en, ru)
LANGUAGE=ru

# ===========================================
# OpenAI-compatible API (for embeddings)
# ===========================================
OPENAI_API_BASE=https://bothub.chat/api/v2/openai/v1
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-ada-002

# ===========================================
# Qdrant Vector Database
# ===========================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_DIR=/var/log/ppb

# ===========================================
# pgAdmin (Database UI)
# ===========================================
PGADMIN_DEFAULT_EMAIL=admin@localhost.com
PGADMIN_DEFAULT_PASSWORD=admin

# ===========================================
# Debug
# ===========================================
DEBUG=false
